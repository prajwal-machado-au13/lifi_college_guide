<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context="com.example.prajwalmachado.lificollegeguide.UpdateValue">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/transparent"
        android:scaleType="fitXY"
        />
    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="serif"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:hint="Update Details Here"
        android:textColorHint="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@android:color/white"
    android:textSize="25dp"
    android:textStyle="bold"
    android:text="Update Information" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button4"
        android:layout_marginStart="15dp"
        android:background="@drawable/al"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/button3"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/bl" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignTop="@+id/button3"
        android:layout_marginStart="21dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/button3"
        android:background="@drawable/cl"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/button3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="500dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btnformate"
        android:fontFamily="serif"
        android:text="Log Out"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
